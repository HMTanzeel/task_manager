<%= form_with model: @client do |form| %>
  
      <div class='form-row'>
        <div class='form-group col-md-6'>
          <label>First Name</label>
          <%= form.text_field 'first_name', class: 'form-control form-control-lg' %>
        </div>
        <div class='form-group col-md-6'>
          <label>Last Name</label>
          <%= form.text_field 'last_name', class: 'form-control form-control-lg' %>
        </div>
        <div class='form-group col-md-6'>
          <label>Source</label>
          <%= form.select(:source, Client.sources.keys , {include_blank: "select source type"}, class: 'form-control form-control-lg') %>
        </div>
        <div class='form-group col-md-6'>
          <label>Website</label>
          <%= form.text_field 'website', class: 'form-control form-control-lg' %>
        </div>
        <div class='form-group col-md-6'>
          <label>Email</label>
          <%= form.email_field 'email', class: 'form-control form-control-lg' %>
        </div>
      </div>
      <div class='form-group'>
        <label>Location</label>
        <%= form.text_area 'location', class: 'form-control form-control-lg' %>
      </div>
      <%= form.submit 'Save', class: 'btn btn-primary' %>
    </div>
  </form>
<% end %>