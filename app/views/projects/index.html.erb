<div class='container'>
  <div class='row'>
    <div class='col'>
      <table class='table mb-5'>
        <%= link_to 'Create Project', new_user_project_path, class:'btn btn-success mb-2 float-right text-light' %>
        <thead class='bg-dark text-white'>
          <tr>
            <th scope='col'>Title</th>
            <th scope='col'>Description</th>
            <th scope='col'>Active</th>
            <th scope='col'>Start Date</th>
            <th scope='col'>Actions</th>
          </tr>
        </thead>
        <% @projects.each do |project| %>
          <tbody>
            <tr>
              <td><%= project.title %></td>
              <td><%= project.description.truncate(28) if project.description.present? %></td>
              <td><%= project.active %></td>
              <td><%= formatted_date(project.started_at) if project.started_at.present? %></td>
              <td>
                <div class="btn-group-vertical">
                  <%= link_to 'Edit', [:edit, current_user, project], class:'btn btn-success mb-1 btn-sm text-light' %>
                  <%= link_to 'show', user_project_path(current_user, project), class:'btn btn-primary mb-1 btn-sm text-light' %>
                  <%= link_to 'Delete', [current_user, project], data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class:'btn btn-danger mb-1 btn-sm text-light' %>
                </div>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>      
</div>